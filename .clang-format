# file    : .clang-format
# author  : KeeneChen <keenechen@qq.com>
# date    : 2025.06.17-17:32:37
# details : custom clang-format file
# notes   : https://clang.llvm.org/docs/ClangFormatStyleOptions.html

---
BasedOnStyle: LLVM
BreakBeforeBraces: Linux
ColumnLimit: 100
IndentWidth: 4
LineEnding: LF
TabWidth: 4
UseTab: Never
AllowShortIfStatementsOnASingleLine: false
AllowShortFunctionsOnASingleLine: Empty
IndentCaseLabels: false

---
Language: C
AlignConsecutiveAssignments: Consecutive
AlignConsecutiveMacros: Consecutive
AlignEscapedNewlines: Left
BraceWrapping:
  AfterFunction: true
  AfterStruct: true
  AfterUnion: true
  BeforeElse: true
Cpp11BracedListStyle: false
DerivePointerAlignment: false
PointerAlignment: Right
SortIncludes: Never

---
Language: Cpp
AlignConsecutiveAssignments: Consecutive
AlignConsecutiveMacros: Consecutive
AlignEscapedNewlines: Left
BraceWrapping:
  AfterFunction: true
  AfterStruct: true
  AfterUnion: true
  BeforeCatch: true
  BeforeElse: true
Cpp11BracedListStyle: false
DerivePointerAlignment: false
PointerAlignment: Right
SortIncludes: Never
